{
  "jsc": {
    "target": "es5",
    "loose": true,
    "externalHelpers": true,
    "parser": {
      "syntax": "typescript"
    },
    "paths": {
      "@/*": [ "src/*" ],
      "@demo/*": [ "demo/*" ],
      "@tests/*": [ "tests/*" ]
    },
    "baseUrl": "./",
    "minify": {
      "module": true,
      "compress": true,
      "mangle": {
        "toplevel": true
      },
      "format": {
        "comments": false
      },
      "keep_fnames": false,
      "toplevel": true
    }
  }
}